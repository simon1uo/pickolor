{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": [
    "packages/**/*/src/**/*",
    "packages/**/*/tests/**/*",
    "examples/**/*/src/**/*",
    "scripts/**/*",
    "tests/**/*"
  ]
}
