{
  "name": "pickolor-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "description": "Pickolor multi-package color toolkit (core + React/Vue shells + styles)",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "pnpm -r build",
    "changeset": "changeset",
    "changeset:publish": "changeset publish",
    "changeset:version": "changeset version",
    "ci:changeset": "node scripts/ci/check-changeset.mjs",
    "ci:publish": "pnpm -r build && pnpm release:check && changeset publish",
    "dev:react": "pnpm --filter @pickolor/react dev",
    "dev:vue": "pnpm --filter @pickolor/vue dev",
    "lint": "pnpm -r --parallel lint --fix",
    "release:check": "node scripts/release/check-artifacts.mjs",
    "release:dry": "pnpm -r build && changeset publish --dry-run",
    "release:pack": "pnpm -r pack",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@changesets/cli": "catalog:",
    "@eslint-react/eslint-plugin": "catalog:",
    "@testing-library/dom": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@testing-library/vue": "catalog:",
    "@types/node": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "@vitejs/plugin-react-swc": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-react-refresh": "catalog:",
    "jiti": "catalog:",
    "jsdom": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  }
}
