{
  "name": "@pickolor/core",
  "type": "module",
  "version": "0.1.0",
  "description": "Headless color parsing/formatting/transform primitives for Pickolor",
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "lint": "eslint src --ext .ts",
    "test": "vitest run --dir ../../ -c ../../vitest.config.ts packages/core/tests"
  },
  "dependencies": {
    "colord": "^2.9.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
