{
  "name": "@pickolor/core",
  "type": "module",
  "version": "0.1.0",
  "description": "Headless color parsing/formatting/transform primitives for Pickolor",
  "license": "MIT",
  "homepage": "https://github.com/simon1uo/pickolor",
  "repository": {
    "type": "git",
    "url": "https://github.com/simon1uo/pickolor.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/simon1uo/pickolor/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "pickolor",
    "color",
    "color-utils",
    "color-space",
    "colord",
    "typescript"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.ts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "lint": "eslint src --ext .ts",
    "test": "vitest run"
  },
  "dependencies": {
    "colord": "^2.9.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
