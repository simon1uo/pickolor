{
  "name": "@pickolor/vue",
  "type": "module",
  "version": "0.1.0",
  "description": "Vue bindings for Pickolor core APIs",
  "license": "MIT",
  "homepage": "https://github.com/simon1uo/pickolor",
  "repository": {
    "type": "git",
    "url": "https://github.com/simon1uo/pickolor.git",
    "directory": "packages/vue"
  },
  "bugs": {
    "url": "https://github.com/simon1uo/pickolor/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "pickolor",
    "color",
    "color-picker",
    "vue",
    "ui",
    "typescript"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts && vue-tsc -p tsconfig.json --emitDeclarationOnly --declaration --outDir dist",
    "lint": "eslint src --ext .ts,.tsx,.vue",
    "test": "vitest run --passWithNoTests",
    "dev": "vite --config vite.config.ts",
    "dev:vite": "vite --config vite.config.ts"
  },
  "peerDependencies": {
    "@pickolor/core": "workspace:*",
    "vue": ">=3.3.0"
  },
  "dependencies": {
    "@floating-ui/vue": "^1.1.9",
    "@vueuse/core": "^13.3.0"
  },
  "devDependencies": {
    "@pickolor/core": "workspace:*",
    "@pickolor/styles": "workspace:*",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/compiler-sfc": "^3.5.12",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "unplugin-vue": "^5.1.4",
    "vite": "^7.2.6",
    "vitest": "^4.0.15",
    "vue": "^3.5.12",
    "vue-tsc": "^3.1.2"
  }
}
