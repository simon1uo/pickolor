{
  "extends": "../../configs/tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "jsx": "preserve",
    "rootDir": "src",
    "allowJs": true,
