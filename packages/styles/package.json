{
  "name": "@pickolor/styles",
  "type": "module",
  "version": "0.1.0",
  "description": "Optional styles and CSS variables for Pickolor shells",
  "license": "MIT",
  "homepage": "https://github.com/simon1uo/pickolor",
  "repository": {
    "type": "git",
    "url": "https://github.com/simon1uo/pickolor.git",
    "directory": "packages/styles"
  },
  "bugs": {
    "url": "https://github.com/simon1uo/pickolor/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "pickolor",
    "color",
    "css",
    "styles",
    "ui",
    "typescript"
  ],
  "sideEffects": [
    "./dist/styles.css",
    "./src/styles.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/styles.css",
      "require": "./dist/styles.css",
      "default": "./dist/styles.css"
    }
  },
  "main": "dist/styles.css",
  "module": "dist/styles.css",
  "files": [
    "LICENSE",
    "README.md",
    "dist"
  ],
  "style": "dist/styles.css",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "mkdir -p dist && cp src/styles.css dist/styles.css",
    "lint": "eslint src --ext .ts,.js,.tsx,.jsx --no-error-on-unmatched-pattern",
    "test": "vitest run --passWithNoTests"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
